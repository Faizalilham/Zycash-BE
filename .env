# ======================
# Docker Configuration
# ======================
COMPOSE_PROJECT_NAME=zycash
DOCKER_USERNAME=yourusername
IMAGE_TAG=latest

# ======================
# PostgreSQL
# ======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_TRANSACTION_DB=transaction_db
POSTGRES_AUTH_DB=auth_db
POSTGRES_REPORT_DB=report_db
POSTGRES_NOTIFICATION_DB=notification_db

# ======================
# Spring Cloud Ports
# ======================
CONFIG_SERVER_PORT=8888
DISCOVERY_SERVER_PORT=8761
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8082
TRANSACTION_SERVICE_PORT=8081
REPORT_SERVICE_PORT=8083
NOTIFICATION_SERVICE_PORT=8084

# ======================
# Datasource URLs (Docker Internal)
# ======================
TRANSACTION_DB_URL=jdbc:postgresql://postgres-transaction:5432/transaction_db
AUTH_DB_URL=jdbc:postgresql://postgres-auth:5432/auth_db
REPORT_DB_URL=jdbc:postgresql://postgres-report:5432/report_db
NOTIFICATION_DB_URL=jdbc:postgresql://postgres-notification:5432/notification_db

# ======================
# Eureka
# ======================
EUREKA_URL=http://discovery-server:8761/eureka/

# ======================
# Ollama (Docker Container)
# ======================
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# ======================
# Kafka
# ======================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ======================
# SERP API
# ======================
SERP_API_KEY=f85e359a4c5fe98239c6b52ce5b4360f6820a08e886907ed189bbca46e4ab6b1
SERP_API_URL=https://serpapi.com/search

# ======================
# Service URLs (for inter-service communication)
# ======================
TRANSACTION_SERVICE_URL=http://transaction-service:8081
REPORT_SERVICE_URL=http://report-service:8083

# ======================
# Notification Configuration
# ======================
# Schedule cron expressions (can be overridden)
SCHEDULE_NO_INCOME=0 0 15 * * *
SCHEDULE_DAILY_SUMMARY=0 0 21 * * *
SCHEDULE_BUDGET_ALERT=0 0 * * * *
SCHEDULE_BILL_REMINDER=0 0 9 * * *
SCHEDULE_WEEKLY_REPORT=0 0 10 * * SUN
SCHEDULE_CLEANUP=0 0 0 * * *

# Notification thresholds
NOTIFICATION_RETENTION_DAYS=30
BUDGET_ALERT_THRESHOLD=80
HIGH_AMOUNT_THRESHOLD=100000
WARNING_AMOUNT_THRESHOLD=500000

# WebSocket
WEBSOCKET_ALLOWED_ORIGINS=*

# ======================
# Report Configuration
# ======================
SUMMARY_RETENTION_MONTHS=12
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
CACHE_ENABLED=true
CACHE_TTL=300

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
JPA_SHOW_SQL=false